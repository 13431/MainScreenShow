<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list" >
    
	<TextView
        android:id="@+id/tv_msseventset_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:textColor="#222222"
        android:textSize="18sp" />
	
	<TextView
        android:id="@+id/tv_msseventset_title_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:paddingBottom="26dp"
        android:paddingTop="14dp"
        android:textColor="#222222"
        android:textSize="18sp" />
	
	<TextView 
	    android:id="@+id/tv_msseventset_tip"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentBottom="true"
	    android:textSize="12sp"
	    android:paddingBottom="5dp"
	    android:layout_marginLeft="15dp" />
	
	<Switch
        android:id="@+id/sw_msseventset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        android:visibility="gone" />
	
	<TextView
        android:id="@+id/tv_msseventset_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        android:textSize="14sp"
        android:textColor="#888888"
        android:visibility="gone" />
	
	<TextView
        android:id="@+id/tv_msseventset_setting_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dp"
        android:textSize="14sp"
        android:textColor="#888888"
        android:visibility="gone" />
	
	<SeekBar 
	    android:id="@+id/tv_msseventset_seekbar"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_toLeftOf="@+id/tv_msseventset_setting"
	    android:paddingRight="20dp"
	    android:paddingLeft="20dp"
	    android:layout_toRightOf="@+id/tv_msseventset_title"
	    android:visibility="gone"/>
    
</RelativeLayout>
